@page
@model DWF.Pages.FilterSelectie

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="css/Filters.css"/>
</head>
<body>
<div>
    <div class="form">
        <form method="post" novalidate>
            <div class="input-group">
                <label for="sector" class="form-label">Sector vraag</label>
                @Html.DropDownListFor(model => model.Sector, new List<SelectListItem>
                {
                    new SelectListItem{Text = "Website", Value = "website"},
                    new SelectListItem{Text = "Social media", Value = "social_media"},
                    new SelectListItem{Text = "Online marketing", Value = "online_marketing"},
                    new SelectListItem{Text = "Online sales", Value = "online_sales"},
                    new SelectListItem{Text = "Proces/Productieverbetering", Value = "procesverbetering"},
                    new SelectListItem{Text = "Security", Value = "security"},
                    new SelectListItem{Text = "Gegevensbewerking", Value = "gegevensbewerking"},
                    new SelectListItem{Text = "Anders", Value = "anders"}
                }, new{@id = "sector" ,@class = "dropdown"})
            </div>
            
            <div class="input-group">
                <label for="type" class="form-label">Type vraag</label>
                @Html.DropDownListFor(model => model.Type, new List<SelectListItem>
                {
                    new SelectListItem{Text = "Advies(rapport)", Value = "advies"},
                    new SelectListItem{Text = "Product", Value = "Product"},
                    new SelectListItem{Text = "Anders", Value = "anders"}
                }, new{@id = "type" ,@class = "dropdown"})
            </div>
            
            <div class="input-group">
                <label for="opleidingsNiveau" class="form-label">Gewenste opleidingsniveau</label>
                @Html.DropDownListFor(model => model.OpleidingsNiveau, new List<SelectListItem>
                {
                    new SelectListItem {Text = "MBO", Value = "MBO"},
                    new SelectListItem {Text = "HBO", Value = "HBO"},
                    new SelectListItem {Text = "Universiteit", Value = "Universiteit"},
                    new SelectListItem {Text = "Anders", Value = "Anders"}
                }, new{@id = "opleidingsNiveau" ,@class = "dropdown"})
            </div>
            
            <div class="input-group">
                                                    <label for="opleidingsjaar" class="form-label">Gewenste opleidingsjaar</label>
                                                    @Html.DropDownListFor(model => model.Opleidingsjaar, new List<SelectListItem>
                                                    {
                                                        new SelectListItem {Text = "Jaar 1", Value = "1"},
                                                        new SelectListItem {Text = "Jaar 2", Value = "2"},
                                                        new SelectListItem {Text = "Jaar 3", Value = "3"},
                                                        new SelectListItem {Text = "Jaar 4", Value = "4"}
                                                    }, new{@id = "opleidingsjaar" ,@class = "dropdown"})
                                                </div>
                        
            
            <button type="submit" class="btn btn-lg btn-primary">Zoek met geselecteerde filters.</button>
        </form>
    </div>
</div>
</body>
</html>