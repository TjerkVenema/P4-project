@page
@model DWF.Pages.OpdrachtAanvraagControle

@{
    Layout = "Shared/_Triage";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link href="@Url.Content("~/css/TriagePagina's.css")" type="text/css" rel="stylesheet">
</head>
<body>
<a href="/Aanvragen" class="btn btn-secondary" id="fixedbutton">Terug</a>
<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="row ruimteboven">
                <ul class="list-group flex-fill">
                    <li class="list-group-item list-group-item-secondary">Opdracht Titel</li>
                    <li class="list-group-item">@Model.opdrachtaanvraag.opdracht_naam</li>
                </ul>
            </div>
            <div class="row ruimteboven">
                <ul class="list-group flex-fill">
                    <li class="list-group-item list-group-item-secondary">Opdracht beschrijving</li>
                    <li class="list-group-item">@Model.opdrachtaanvraag.beschrijving</li>
                </ul>
            </div>
            <div class="row ruimteboven">
                <ul class="list-group flex-fill">
                    <li class="list-group-item list-group-item-secondary">Gewenste opleiding</li>
                    <li class="list-group-item">@Model.opdrachtaanvraag.gewenste_opleiding</li>
                </ul>
            </div>
            <div class="row d-flex flex-nowrap ruimteboven">
                <form method="post">
                    <div class="justify-content-around d-flex">
                        <button asp-page-handler="Ja" type="submit" class="btn btn-secondary">Goedkeuren</button>
                        <button asp-page-handler="Nee" type="submit" class="btn btn-secondary w-25">Afkeuren</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3 doos">
            <h2>Contact gegevens</h2>
            <h5>Opdrachtgever: @Model.opdrachtgever.naam</h5>
            <h5>Email: @Model.opdrachtgever.email</h5>
            <h5>Zakelijk nummer: @Model.opdrachtgever.zakelijknummer</h5>
        </div>
    </div>
</div>
</body>
</html>